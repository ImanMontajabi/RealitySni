{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "| %(message)s - %(asctime)s ",
      "datefmt": "%Y-%m-%dT%H:%M:%SZ"
    },
    "json": {
      "()": "logger.MyJSONFormatter",
      "fmt_keys": {
        "level": "levelname",
        "message": "message",
        "timestamp": "timestamp",
        "logger": "name",
        "module": "module",
        "function": "funcName",
        "line": "lineno",
        "task_name": "taskName"
      }
    }
  },
  "handlers": {
    "stdout": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "simple",
      "filters": ["ExactInfoFilter"]
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "json",
      "filename": "logs/tls-checker.log",
      "maxBytes": 1000000,
      "backupCount": 3
    },
    "queue_handler": {
      "class": "logging.handlers.QueueHandler",
      "handlers": ["stdout", "file"],
      "respect_handler_level": true
    }
  },
  "loggers": {
    "root": {
      "level": "DEBUG",
      "handlers": ["queue_handler"]
    }
  },
  "filters": {
    "ExactInfoFilter": {
      "()": "logger.ExactInfoFilter"
    }
  }
}
